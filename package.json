{
  "name": "ai-home-assistant",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "dev.bat",
    "dev:clean": "powershell -ExecutionPolicy Bypass -Command \"if (Test-Path .next) { Remove-Item -Recurse -Force .next }; next dev\"",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "fix-perms": "powershell -ExecutionPolicy Bypass -File ./fix-next-permissions.ps1",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@supabase/ssr": "^0.5.1",
    "@supabase/supabase-js": "^2.47.0",
    "jspdf": "^4.0.0",
    "lucide-react": "^0.562.0",
    "next": "^14.2.0",
    "openai": "^4.28.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.0",
    "postcss": "^8.4.40",
    "prettier": "^3.8.0",
    "tailwindcss": "^3.4.7",
    "typescript": "^5.5.4"
  }
}
